@using Gadi.Extensions

@{
    ViewBag.Title = "Index";
}

<section class="content">
    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="header">
                        <div class="row clearfix">
                            <div class="col-xs-12 col-sm-6">
                                <h2>Driver Feedbacks</h2>
                            </div>
                            <div class="col-xs-12 col-sm-6 align-right">
                                <div class="switch panel-switch-btn">
                                    <input type="text" ng-model="searchField" ng-keyup="$event.keyCode == 13 && model.searchDriverFeedback(searchField)" class="form-control" placeholder="Search for Driver Feedback...">
                                    <span class="input-group-btn">
                                        <button class="btn btn-default" ng-click="model.searchDriverFeedback(searchField)" type="button">Go!</button>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-content">
                        <div ng-controller="DriverFeedbackController as model" ng-init="model.initialise()">
                            <div class="">
                                <div class="">
                                    @if (User.IsSuperAdmin())
                                    {
                                        <div class="row">
                                            <div class="col-xs-6">
                                                <a class="btn btn-primary btn-lg">
                                                    <i class="fa fa-user"></i> Create
                                                </a>
                                            </div>
                                        </div>
                                    }
                                </div>
                                <div class="">
                                    <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right">
                                        <div class="input-group">

                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-md-12 col-sm-12 col-xs-12">
                                    <div class="">

                                        <div class="">
                                            <p class="text-muted font-13 m-b-30">
                                            </p>
                                            <div id="datatable_wrapper" class="dataTables_wrapper form-inline">
                                                <div ng-if="model.driverFeedbacks.length !=0">
                                                    <div class="row">
                                                        <div class="col-xs-12">
                                                            @Html.Partial("Pagination/_pageSize")
                                                        </div>
                                                    </div>

                                                    <div class="col-lg-12">
                                                        <div class="row">
                                                            <div class="col-xs-12">
                                                                <table wt-responsive-table class="table table-striped table-bordered table-hover dataTable" role="grid" aria-describedby="datatable-fixed-header_info">
                                                                    <thead>
                                                                        <tr role="row">
                                                                            <th ng-click="model.order('DriverName')" ng-class="model.orderClass('DriverName')">Driver</th>
                                                                            <th ng-click="model.order('Comment')" ng-class="model.orderClass('Comment')">Comment</th>
                                                                            <th ng-click="model.order('Rating')" ng-class="model.orderClass('Rating')">Rating</th>
                                                                            <th>Actions</th>
                                                                        </tr>
                                                                    </thead>
                                                                    <tbody>
                                                                        <tr ng-repeat="driverFeedback in model.driverFeedbacks" class="" ng-click="$event.originalEvent.ngClickHandled || model.viewDriverFeedback(driverFeedback.DriverFeedbackId)">
                                                                            <td><span ng-bind="driverFeedback.DriverName"></span></td>
                                                                            <td><span ng-bind="driverFeedback.Comment"></span></td>
                                                                            <td><span ng-bind="driverFeedback.Rating"></span></td>
                                                                            <td>
                                                                                <div class="btn-group pull-right">
                                                                                    <a class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown" aria-expanded="false" ng-click="$event.originalEvent.ngClickHandled = true">
                                                                                        <i class="fa fa-chevron-down"></i>
                                                                                    </a>
                                                                                    <ul class="dropdown-menu">
                                                                                        <li>
                                                                                            <a style="cursor: pointer;" ng-href="/DriverFeedback/{{driverFeedback.DriverFeedbackId}}/Edit">
                                                                                                Edit Driver Feedback
                                                                                            </a>
                                                                                        </li>
                                                                                    </ul>
                                                                                </div>
                                                                            </td>
                                                                        </tr>
                                                                    </tbody>
                                                                </table>
                                                            </div>
                                                        </div>

                                                    </div>
                                                    @Html.Partial("Pagination/_pagination")
                                                    <div class="row">
                                                        <div class="col-xs-12">
                                                            <label ng-bind="model.searchMessage"></label>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>