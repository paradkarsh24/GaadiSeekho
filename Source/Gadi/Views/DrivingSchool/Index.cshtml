@using Gadi.Extensions

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<section class="content">
    <div class="container-fluid">
    <div class="row clearfix">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="card">
                <div class="header">
                    <div class="row clearfix">
                        <div class="col-xs-12 col-sm-6">
                            <h2>Driving Schools</h2>
                        </div>
                        <div class="col-xs-12 col-sm-6 align-right">
                            <div class="switch panel-switch-btn">
                                <input type="text" ng-model="searchField" ng-keyup="$event.keyCode == 13 && model.searchPersonnel(searchField)" class="form-control" placeholder="Search for personnel...">
                                <span class="input-group-btn">
                                    <button class="btn btn-default" ng-click="model.searchPersonnel(searchField)" type="button">Go!</button>
                                </span> 
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-content">
                    <div ng-controller="DrivingSchoolController as model" ng-init="model.initialise()">
                        <div class="">
                            <div class="">
                                @if (User.IsSuperAdmin())
                                {
                                    <div class="row">
                                        <div class="col-xs-6">
                                            <a class="btn btn-primary btn-lg">
                                                <i class="fa fa-user"></i> Create
                                            </a>
                                        </div>
                                    </div>
                                }
                            </div>
                            <div class="">
                                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right">
                                    <div class="input-group">
                                       
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <div class="">
                                   
                                    <div class="">
                                        <p class="text-muted font-13 m-b-30">
                                        </p>
                                        <div id="datatable_wrapper" class="dataTables_wrapper form-inline">
                                            <div ng-if="model.drivingSchools.length !=0">
                                                <div class="row">
                                                    <div class="col-xs-12">
                                                        @Html.Partial("Pagination/_pageSize")
                                                    </div>
                                                </div>

                                                <div class="col-lg-12">
                                                    <div class="row">
                                                        <div class="col-xs-12">
                                                            <table wt-responsive-table class="table table-striped table-bordered table-hover dataTable" role="grid" aria-describedby="datatable-fixed-header_info">
                                                                <thead>
                                                                    <tr role="row">
                                                                        <th>Avatar</th>
                                                                        <th ng-click="model.order('Name')" ng-class="model.orderClass('Name')">Name</th>
                                                                        <th ng-click="model.order('Address1')" ng-class="model.orderClass('Address1')">Address1</th>
                                                                        <th ng-click="model.order('Email')" ng-class="model.orderClass('Email')">Email</th>
                                                                        <th ng-click="model.order('Mobile')" ng-class="model.orderClass('Mobile')">Mobile</th>
                                                                        <th>Actions</th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    <tr ng-repeat="drivingSchool in model.drivingSchools" class="" ng-click="$event.originalEvent.ngClickHandled || model.viewPersonnelProfile(person.PersonnelId)">
                                                                        <td><span ng-cloak><img class="avatar" ng-src="{{ person.Avatar.Url || '/Images/Avatar.png' }}" alt="Avatar" title="avatar"></span><br /></td>
                                                                        <td><span ng-bind="drivingSchool.Name"></span></td>
                                                                        <td><span ng-bind="drivingSchool.Address1"></span></td>
                                                                        <td><span ng-bind="drivingSchool.Email"></span></td>
                                                                        <td><span ng-bind="drivingSchool.Mobile"></span></td>
                                                                        <td>
                                                                            <div class="btn-group pull-right">
                                                                                <a class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown" aria-expanded="false" ng-click="$event.originalEvent.ngClickHandled = true">
                                                                                    <i class="fa fa-chevron-down"></i>
                                                                                </a>
                                                                                <ul class="dropdown-menu">
                                                                                    <li>
                                                                                        <a style="cursor: pointer;" ng-click="model.viewPersonnelProfile(person.PersonnelId)">
                                                                                            View Profile
                                                                                        </a>
                                                                                    </li>
                                                                                    @if (User.IsInAnyRoles("SuperUser"))
                                                                                    {
                                                                                        <li>
                                                                                            <a style="cursor: pointer;" ng-href="/Personnel/{{person.PersonnelId}}/Edit">
                                                                                                Edit Profile
                                                                                            </a>
                                                                                        </li>
                                                                                    }
                                                                                </ul>
                                                                            </div>
                                                                        </td>
                                                                    </tr>
                                                                </tbody>
                                                            </table>
                                                        </div>
                                                    </div>

                                                </div>
                                                @Html.Partial("Pagination/_pagination")
                                                <div class="row">
                                                    <div class="col-xs-12">
                                                        <label ng-bind="model.searchMessage"></label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    
    </div>
</section>